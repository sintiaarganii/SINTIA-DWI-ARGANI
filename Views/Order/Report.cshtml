@model SINTIA_DWI_ARGANI.Models.DTO.ReportDTO
@{
    ViewData["Title"] = "Order Report";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Order Report</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Filter Report</h5>

                        <form asp-action="Report" method="post" class="row g-3">
                            <div class="col-md-5">
                                <label class="form-label">Start Date</label>
                                <input type="date" class="form-control" name="startDate"
                                       value="@Model.StartDate.ToString("yyyy-MM-dd")" required>
                            </div>
                            <div class="col-md-5">
                                <label class="form-label">End Date</label>
                                <input type="date" class="form-control" name="endDate"
                                       value="@Model.EndDate.ToString("yyyy-MM-dd")" required>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary">Filter</button>
                            </div>
                        </form>

                        <div class="text-end mt-3">
                            <a href="@Url.Action("ExportToExcel", new { startDate = Model.StartDate, endDate = Model.EndDate })"
                               class="btn btn-success">
                                <i class="bi bi-file-earmark-excel"></i> Export to Excel
                            </a>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card info-card revenue-card">
                                    <div class="card-body">
                                        <h5 class="card-title">Total Orders</h5>
                                        <div class="d-flex align-items-center">
                                            <div class="ps-3">
                                                <h6>@Model.TotalOrders</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card info-card sales-card">
                                    <div class="card-body">
                                        <h5 class="card-title">Total Revenue</h5>
                                        <div class="d-flex align-items-center">
                                            <div class="ps-3">
                                                <h6>@Model.TotalRevenue.ToString("C")</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card info-card customers-card">
                                    <div class="card-body">
                                        <h5 class="card-title">Date Range</h5>
                                        <div class="d-flex align-items-center">
                                            <div class="ps-3">
                                                <h6>@Model.StartDate.ToString("d") - @Model.EndDate.ToString("d")</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mt-4">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Date</th>
                                        <th>Cashier</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>@order.ProductName</td>
                                            <td>@order.Quantity</td>
                                            <td>@order.Total.ToString("C")</td>
                                            <td>@order.OrderDate.ToString("g")</td>
                                            <td>@order.CashierName</td>
                                            <td>
                                                <span class="badge @(order.StatusOrders == GeneralStatus.GeneralStatusData.published ? "bg-success" : "bg-warning")">
                                                    @order.StatusOrders
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Styles {
    <style>
        .info-card {
            border-left: 4px solid #0d6efd;
        }
        .revenue-card {
            border-left-color: #198754;
        }
        .sales-card {
            border-left-color: #fd7e14;
        }
        .customers-card {
            border-left-color: #6f42c1;
        }
    </style>
}