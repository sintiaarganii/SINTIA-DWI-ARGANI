@using SINTIA_DWI_ARGANI.Models.DTO
@model DailyDashboardDTO
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Include required CSS and JS libraries -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<main id="main" class="main" style="background-color: #F6F0F0;">
    <div class="pagetitle animate_animated animate_fadeInDown">
        <h1><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-8">
                <div class="row">
                    <!-- Sales Card -->
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card sales-card animate_animated animate_zoomIn" data-animate-delay="0.2s">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start"><h6>Filter</h6></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="sales">Today</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="sales">This Month</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="sales">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Sales <span id="sales-filter">| Today</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="sales-count">@Model.TodaysProductsSold</h6>
                                        <span id="sales-change" class="@(Model.SalesChangePercentage >= 0 ? "text-success" : "text-danger") small pt-1 fw-bold">
                                            @Model.SalesChangePercentage.ToString("0.00")%
                                            <i class="fas @(Model.SalesChangePercentage >= 0 ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                        </span>
                                        <span class="text-muted small pt-2 ps-1">change</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Sales Card -->
                    <!-- Revenue Card (Widened) -->
                    <div class="col-xxl-8 col-md-6">
                        <div class="card info-card revenue-card animate_animated animate_zoomIn" data-animate-delay="0.4s">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start"><h6>Filter</h6></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="revenue">Today</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="revenue">This Month</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="revenue">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Revenue <span id="revenue-filter">| Today</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="revenue-amount">@Model.TodaysTotalRevenue.ToString("C")</h6>
                                        <span id="revenue-change" class="@(Model.RevenueChangePercentage >= 0 ? "text-success" : "text-danger") small pt-1 fw-bold">
                                            @Model.RevenueChangePercentage.ToString("0.00")%
                                            <i class="fas @(Model.RevenueChangePercentage >= 0 ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                        </span>
                                        <span class="text-muted small pt-2 ps-1">change</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Revenue Card -->
                    <!-- Orders Card -->
                    <div class="col-xxl-4 col-xl-12">
                        <div class="card info-card orders-card animate_animated animate_zoomIn" data-animate-delay="0.6s">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start"><h6>Filter</h6></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="orders">Today</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="orders">This Month</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="orders">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Orders <span id="orders-filter">| Today</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-receipt"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="orders-count">@Model.TodaysOrderCount</h6>
                                        <span id="orders-change" class="@(Model.OrdersChangePercentage >= 0 ? "text-success" : "text-danger") small pt-1 fw-bold">
                                            @Model.OrdersChangePercentage.ToString("0.00")%
                                            <i class="fas @(Model.OrdersChangePercentage >= 0 ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                        </span>
                                        <span class="text-muted small pt-2 ps-1">change</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Orders Card -->
                    <!-- Recent Orders -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto animate_animated animate_fadeInUp">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start"><h6>Filter</h6></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="recent-orders">Today</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="recent-orders">This Month</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="recent-orders">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Recent Orders <span id="recent-orders-filter">| Today</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Order ID</th>
                                            <th scope="col">Customer</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Total</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.TodaysOrders)
                                        {
                                            <tr>
                                                <th scope="row"><a href="#">#@order.Id</a></th>
                                                <td>@order.CustomerName</td>
                                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@order.TotalPrice.ToString("C")</td>
                                                <td><span class="badge bg-success">Completed</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End Recent Orders -->
                    <!-- Top Selling Products -->
                    <div class="col-12">
                        <div class="card top-selling overflow-auto animate_animated animate_fadeInUp">
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start"><h6>Filter</h6></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="top-selling">Today</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="top-selling">This Month</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="top-selling">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body pb-0">
                                <h5 class="card-title">Top Selling Products <span id="top-selling-filter">| Today</span></h5>
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th scope="col">Preview</th>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Sold</th>
                                            <th scope="col">Revenue</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row"><a href="#"><img src="~/img/product-1.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Product 1</a></td>
                                            <td>$64</td>
                                            <td class="fw-bold">124</td>
                                            <td>$7,936</td>
                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#"><img src="~/img/product-2.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Product 2</a></td>
                                            <td>$46</td>
                                            <td class="fw-bold">98</td>
                                            <td>$4,508</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End Top Selling Products -->
                </div>
            </div><!-- End Left side columns -->
            <!-- Right side columns -->
            <div class="col-lg-4">
                <!-- Recent Activity -->
                <div class="card animate_animated animate_fadeInRight">
                    <div class="filter">
                        <a class="icon" href="#" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start"><h6>Filter</h6></li>
                            <li><a class="dropdown-item filter-option" href="#" data-filter="today" data-card="activity">Today</a></li>
                            <li><a class="dropdown-item filter-option" href="#" data-filter="month" data-card="activity">This Month</a></li>
                            <li><a class="dropdown-item filter-option" href="#" data-filter="year" data-card="activity">This Year</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Recent Activity <span id="activity-filter">| Today</span></h5>
                        <div class="activity">
                            @foreach (var order in Model.TodaysOrders.Take(5))
                            {
                                <div class="activity-item d-flex">
                                    <div class="activite-label">@order.OrderDate.ToString("HH:mm")</div>
                                    <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                    <div class="activity-content">
                                        Order #@order.Id by <a href="#" class="fw-bold text-dark">@order.CustomerName</a>
                                        <br>Total: @order.TotalPrice.ToString("C")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div><!-- End Recent Activity -->
            </div><!-- End Right side columns -->
        </div>
    </section>
</main><!-- End #main -->

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Apply animation delays
        document.querySelectorAll('[data-animate-delay]').forEach(el => {
            el.style.animationDelay = el.getAttribute('data-animate-delay');
        });

        // Filter functionality (placeholder)
        $('.filter-option').on('click', function (e) {
            e.preventDefault();
            const filter = $(this).data('filter');
            const card = $(this).data('card');

            // Update filter text
            $(`#${card}-filter`).text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);

            // Show loading animation
            $(this).closest('.card').addClass('animate_animated animate_pulse');
            setTimeout(() => {
                $(this).closest('.card').removeClass('animate_animated animate_pulse');
            }, 1000);

            // In a real app, you would make an AJAX call here
            console.log(`Filter changed to ${filter} for ${card}`);
        });
    });
</script>

