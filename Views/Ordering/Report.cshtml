@using SINTIA_DWI_ARGANI.Models.DTO
@model List<OrderingDTO>
@{
    ViewData["Title"] = "Laporan Pesanan";
    var culture = new System.Globalization.CultureInfo("id-ID");
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background: #f6f9ff;
    }

    .content-wrapper {
        padding: 20px;
        transition: margin-left 0.3s ease;
    }

    .sidebar-collapsed .content-wrapper {
        margin-left: 80px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .card {
        border: none;
        border-radius: 15px;
        background: #ffffff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .card h4 {
        font-weight: 600;
        color: #012970;
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
    }

    .btn-primary {
        background: #4154f1;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        color: #fff;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background: #3345c1;
        transform: translateY(-2px);
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table thead th {
        background: #4154f1;
        color: #fff;
        font-weight: 500;
        padding: 15px;
        text-align: left;
        border: none;
    }

    .table tbody tr {
        transition: background 0.3s ease;
    }

    .table tbody tr:hover {
        background: #f6f9ff;
    }

    .table tbody td {
        padding: 15px;
        color: #444444;
        border-bottom: 1px solid #ebedf3;
    }

    .order-details {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .order-details li {
        margin-bottom: 5px;
        font-size: 0.95rem;
        color: #555;
    }

    .text-center {
        color: #777;
        font-style: italic;
    }
</style>

<main id="main" class="content-w rapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <h4>Report Order</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nama Pelanggan</th>
                                <th>Tanggal Pesanan</th>
                                <th>Total Harga</th>
                                <th>Detail Pesanan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Belum ada pesanan.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.CustomerName</td>
                                        <td>@order.OrderDate.ToString("dd MMMM yyyy")</td>
                                        <td>Rp @order.TotalPrice.ToString("N2", culture)</td>
                                        <td>
                                            <ul class="order-details">
                                                @foreach (var detail in order.OrderDetails)
                                                {
                                                    <li>
                                                        @detail.ProductName - @detail.Quantity unit
                                                        @if (detail.UnitPrice > 0)
                                                        {
                                                            <text>
                                                                 (Rp @(detail.UnitPrice.ToString("N2", culture)) per unit,
                                                                 Subtotal: Rp @((detail.Quantity * detail.UnitPrice).ToString("N2", culture)))
                                                            </text>
                                                        }
                                                        else
                                                        {
                                                            <text>(Harga tidak tersedia)</text>
                                                        }
                                                    </li>

                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const body = document.body;
            const contentWrapper = document.querySelector('.content-wrapper');

            function adjustContentWidth() {
                if (body.classList.contains('sidebar-collapsed')) {
                    contentWrapper.classList.add('sidebar-collapsed');
                } else {
                    contentWrapper.classList.remove('sidebar-collapsed');
                }
            }

            adjustContentWidth();

            const observer = new MutationObserver(function (mutations) {
                mutations.forEach(function (mutation) {
                    if (mutation.attributeName === 'class') {
                        adjustContentWidth();
                    }
                });
            });

            observer.observe(body, { attributes: true });

            const sidebarToggler = document.querySelector('.toggle-sidebar-btn');
            if (sidebarToggler) {
                sidebarToggler.addEventListener('click', adjustContentWidth);
            }
        });
    </script>
}