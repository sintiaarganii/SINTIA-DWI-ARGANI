@using SINTIA_DWI_ARGANI.Models.DTO
@model List<OrderingDTO>
@{
    ViewData["Title"] = "Laporan Pesanan";
    var culture = new System.Globalization.CultureInfo("id-ID");
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
        min-height: 100vh;
    }

    .content-wrapper {
        padding: 30px;
        transition: margin-left 0.3s ease;
        max-width: 1400px;
        margin: 0 auto;
    }

    .sidebar-collapsed .content-wrapper {
        margin-left: 80px;
    }

    .table-responsive {
        overflow-x: auto;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        background: #fff;
    }

    .card {
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
        padding: 30px;
        margin-bottom: 30px;
        position: relative;
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

        .card h4 {
            font-weight: 700;
            color: #4154f1; /* Changed from #b91c1c to blue */
            text-align: center;
            margin-bottom: 25px;
            font-size: 1.75rem;
            letter-spacing: 0.5px;
            background: linear-gradient(90deg, #4154f1, #3345c1); /* Added gradient */
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .btn-primary {
        background: #4154f1; /* Changed from #dc2626 to blue */
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        font-weight: 500;
        color: #fff;
        transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-primary:hover {
            background: #3345c1; /* Changed from #b91c1c to darker blue */
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(65, 84, 241, 0.3);
        }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 0;
    }

        .table thead th {
            background: linear-gradient(90deg, #4154f1, #3345c1); /* Changed from #dc2626 to blue gradient */
            color: #fff;
            font-weight: 600;
            padding: 18px;
            text-align: left;
            border: none;
            font-size: 1.05rem;
            letter-spacing: 0.3px;
        }

        .table tbody tr {
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .table tbody tr:hover {
                background: #f6f9ff;
                transform: scale(1.01);
            }

        .table tbody td {
            padding: 18px;
            color: #444444;
            border-bottom: 1px solid #ebedf3;
            font-size: 0.95rem;
            line-height: 1.5;
        }

    .order-details {
        margin: 0;
        padding: 0;
        list-style: none;
    }

        .order-details li {
            margin-bottom: 8px;
            font-size: 0.95rem;
            color: #555;
            position: relative;
            padding-left: 20px;
            line-height: 1.6;
        }

            .order-details li::before {
                content: "•";
                position: absolute;
                left: 0;
                color: #4154f1; /* Use blue for bullet points */
                font-size: 1.2rem;
            }

    .text-center {
        color: #777;
        font-style: italic;
        font-size: 1rem;
        padding: 20px;
    }
</style>

<main id="main" class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <h4>Report Order</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nama Pelanggan</th>
                                <th>Tanggal Pesanan</th>
                                <th>Total Harga</th>
                                <th>Detail Pesanan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Belum ada pesanan.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.CustomerName</td>
                                        <td>@order.OrderDate.ToString("dd MMMM yyyy")</td>
                                        <td>Rp @order.TotalPrice.ToString("N2", culture)</td>
                                        <td>
                                            <ul class="order-details">
                                                @foreach (var detail in order.OrderDetails)
                                                {
                                                    <li>
                                                        @detail.ProductName - @detail.Quantity unit
                                                        @if (detail.UnitPrice > 0)
                                                        {
                                                            <text>
                                                                (Rp @(detail.UnitPrice.ToString("N2", culture)) per unit,
                                                                Subtotal: Rp @((detail.Quantity * detail.UnitPrice).ToString("N2", culture)))
                                                            </text>
                                                        }
                                                        else
                                                        {
                                                            <text>(Harga tidak tersedia)</text>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const body = document.body;
            const contentWrapper = document.querySelector('.content-wrapper');

            function adjustContentWidth() {
                if (contentWrapper) {
                    if (body.classList.contains('sidebar-collapsed')) {
                        contentWrapper.classList.add('sidebar-collapsed');
                    } else {
                        contentWrapper.classList.remove('sidebar-collapsed');
                    }
                }
            }

            adjustContentWidth();

            const observer = new MutationObserver(function (mutations) {
                mutations.forEach(function (mutation) {
                    if (mutation.attributeName === 'class') {
                        adjustContentWidth();
                    }
                });
            });

            observer.observe(body, { attributes: true });

            const sidebarToggler = document.querySelector('.toggle-sidebar-btn');
            if (sidebarToggler) {
                sidebarToggler.addEventListener('click', adjustContentWidth);
            }
        });
    </script>
}