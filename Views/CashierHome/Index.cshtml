@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Apply animation delays
            document.querySelectorAll('[data-animate-delay]').forEach(el => {
                el.style.animationDelay = el.getAttribute('data-animate-delay');
            });

            // Initialize Sales Chart
            const salesChart = new Chart(document.getElementById('salesChart'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Sales',
                        data: [],
                        borderColor: '#4154f1',
                        fill: true,
                        backgroundColor: 'rgba(65, 84, 241, 0.2)',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'top' },
                        title: { display: true, text: 'Sales Overview' }
                    },
                    scales: {
                        x: { display: true, title: { display: true, text: 'Date' } },
                        y: { display: true, title: { display: true, text: 'Sales ($)' } }
                    }
                }
            });

            // Function to fetch dashboard data
            function fetchDashboardData(filter, card) {
                $.ajax({
                    url: '@Url.Action("GetDashboardData", "Ordering")',
                    type: 'GET',
                    data: { filter: filter, card: card },
                    success: function (data) {
                        if (card === 'sales') {
                            $('#sales-amount').text(`$${data.salesAmount.toLocaleString()}`);
                            $('#sales-change').text(data.salesChange + '%').removeClass().addClass(data.salesChange >= 0 ? 'text-success' : 'text-danger');
                            $('#sales-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        } else if (card === 'orders') {
                            $('#orders-count').text(data.ordersCount);
                            $('#orders-change').text(data.ordersChange + '%').removeClass().addClass(data.ordersChange >= 0 ? 'text-success' : 'text-danger');
                            $('#orders-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        } else if (card === 'products') {
                            $('#products-count').text(data.productsCount);
                            $('#products-change').text(data.productsChange + '%').removeClass().addClass(data.productsChange >= 0 ? 'text-success' : 'text-danger');
                            $('#products-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        } else if (card === 'sales-chart') {
                            salesChart.data.labels = data.chartLabels;
                            salesChart.data.datasets[0].data = data.chartData;
                            salesChart.update();
                            $('#sales-chart-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        } else if (card === 'recent-orders') {
                            $('#recent-orders-list').html(data.recentOrdersHtml);
                            $('#recent-orders-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        } else if (card === 'top-selling') {
                            $('#top-selling-table').html(data.topSellingHtml);
                            $('#top-selling-filter').text(`| ${filter.charAt(0).toUpperCase() + filter.slice(1)}`);
                        }
                        // Reapply animations
                        $(`.${card}-card, .card:has(#${card}-filter)`).addClass('animate__animated animate__pulse').on('animationend', function () {
                            $(this).removeClass('animate__animated animate__pulse');
                        });
                    },
                    error: function (xhr) {
                        console.error('Error fetching data:', xhr.responseText);
                    }
                });
            }

            // Handle filter dropdown clicks
            $('.filter-option').on('click', function (e) {
                e.preventDefault();
                const filter = $(this).data('filter');
                const card = $(this).data('card');
                fetchDashboardData(filter, card);
            });

            // Initial data load
            fetchDashboardData('today', 'sales');
            fetchDashboardData('today', 'orders');
            fetchDashboardData('today', 'products');
            fetchDashboardData('today', 'sales-chart');
            fetchDashboardData('today', 'recent-orders');
            fetchDashboardData('today', 'top-selling');
        });
    </script>
}

