@{
    ViewData["Title"] = "Cashier Dashboard";
    Layout = "~/Views/Shared/_LayoutCashier.cshtml";
}

<!-- Include Animate.css and Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<main id="main" class="main" style="background-color: #F6F0F0;">
    <div class="container">
        <div class="pagetitle animate__animated animate__bounceInDown">
            <h1><i class="fas fa-store me-2"></i>Welcome to Your Shopping Dashboard</h1>
        </div>
        <div class="dashboard">
            <!-- Products -->
            <div class="card animate__animated animate__zoomIn" data-animate-delay="0.2s">
                <i class="fas fa-box-open"></i>
                <h3>Products</h3>
                <p>Browse our wide range of products</p>
                <a href="/Product/IndexView" class="btn">View Products</a>
            </div>

            <!-- Categories -->
            <div class="card animate__animated animate__zoomIn" data-animate-delay="0.4s">
                <i class="fas fa-tags"></i>
                <h3>Categories</h3>
                <p>Explore products by category</p>
                <a href="/Category/IndexView" class="btn">Browse Categories</a>
            </div>

            <!-- Ordering -->
            <div class="card animate__animated animate__zoomIn" data-animate-delay="0.6s">
                <i class="fas fa-shopping-cart"></i>
                <h3>Ordering</h3>
                <p>Place or track your orders</p>
                <a href="/Ordering/Index" class="btn">Manage Orders</a>
            </div>

            <!-- About -->
            <div class="card animate__animated animate__zoomIn" data-animate-delay="0.8s">
                <i class="fas fa-info-circle"></i>
                <h3>About Us</h3>
                <p>Learn more about our store</p>
                <a href="@Url.Action("Index", "About")" class="btn">Read More</a>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Apply animation delays
            document.querySelectorAll('[data-animate-delay]').forEach(el => {
                el.style.animationDelay = el.getAttribute('data-animate-delay');
            });
        });
    </script>
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .pagetitle {
        text-align: center;
        padding: 20px 0;
        background: #F6F0F0;
        border-bottom: 3px solid #D32F2F; /* Red accent from the image */
        margin-bottom: 20px;
        border-radius: 10px;
    }

        .pagetitle h1 {
            margin: 0;
            font-size: 2.5em;
            color: #D32F2F; /* Red color */
        }

    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        background: #F6F0F0;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        width: 300px;
        padding: 25px;
        text-align: center;
        border: 2px solid #FFCDD2; /* Light red border */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card i {
            font-size: 3.5em;
            color: #D32F2F; /* Red color */
            margin-bottom: 15px;
            transition: color 0.3s ease;
        }

        .card:hover i {
            color: #b71c1c; /* Darker red on hover */
        }

        .card h3 {
            font-size: 1.6em;
            margin: 10px 0;
            color: #D32F2F;
            font-weight: 600;
        }

        .card p {
            font-size: 1em;
            color: #666;
            margin-bottom: 15px;
        }

        .card .btn {
            display: inline-block;
            padding: 10px 25px;
            background-color: #D32F2F;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .card .btn:hover {
                background-color: #b71c1c;
                transform: scale(1.05);
            }
</style>
