@using SINTIA_DWI_ARGANI.Models.DTO
@model RegistCashierDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Register - Cashier Portal</title>
    <meta content="Register a new cashier account" name="description">
    <meta content="cashier, register, portal" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .card {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            position: relative;
            backdrop-filter: blur(10px);
            max-width: 450px;
            width: 100%;
        }

        .user-icon {
            background: #A31D1D;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .user-icon i {
                color: white;
                font-size: 1.5rem;
            }

        .card-title {
            font-weight: 600;
            color: #2d3748;
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 0.5rem;
        }

        .card-body p {
            color: #718096;
            font-size: 0.9rem;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #4a5568;
            font-size: 0.95rem;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            padding: 0.75rem;
            background: #f7fafc;
            color: #4a5568;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #4f46e5;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
                outline: none;
            }

        .input-group button {
            border: 1px solid #e2e8f0;
            border-left: none;
            background: #f7fafc;
            border-radius: 0 10px 10px 0;
            transition: background 0.3s ease;
        }

            .input-group button:hover {
                background: #edf2f7;
            }

            .input-group button i {
                font-size: 1.2rem;
                color: #4a5568;
            }

        .btn-primary {
            background: #A31D1D;
            border: none;
            border-radius: 10px;
            padding: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background: #A31D1D;
                transform: translateY(-2px);
            }

        .invalid-feedback {
            font-size: 0.85rem;
            color: #e53e3e;
        }

        .text-danger {
            font-size: 0.85rem;
        }

        .small a {
            color: #4f46e5;
            text-decoration: none;
            font-weight: 500;
        }

            .small a:hover {
                color: #4338ca;
                text-decoration: underline;
            }

        .credits {
            text-align: center;
            font-size: 0.85rem;
            color: #718096;
            margin-top: 1rem;
        }

            .credits a {
                color: #4f46e5;
                text-decoration: none;
            }

                .credits a:hover {
                    color: #4338ca;
                    text-decoration: underline;
                }

        .back-to-top {
            background: #4f46e5;
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: fixed;
            bottom: 20px;
            right: 20px;
            transition: background 0.3s ease;
        }

            .back-to-top:hover {
                background: #4338ca;
            }
    </style>
</head>
<body>
    <main>
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="card">
                <div class="user-icon">
                    <i class="bi bi-person"></i>
                </div>
                <div class="card-body">
                    <div class="pt-4 pb-2 text-center">
                        <h5 class="card-title fs-4">Create an Account</h5>
                        <p class="small">Enter your details to register as a cashier</p>
                    </div>
                    <!-- Display validation summary for non-field-specific errors -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <form class="row g-3 needs-validation" asp-controller="Authentication" asp-action="RegisterCashier" method="post" novalidate>
                        <div class="col-12">
                            <label for="yourName" class="form-label">Name</label>
                            <input type="text" name="Name" asp-for="Name" class="form-control" id="yourName" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="invalid-feedback">Please, enter your name!</div>
                        </div>
                        <div class="col-12">
                            <label for="yourUsername" class="form-label">Username</label>
                            <input type="text" name="Username" asp-for="Username" class="form-control" id="yourUsername" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <div class="invalid-feedback">Please input a username.</div>
                        </div>
                        <div class="col-12">
                            <label for="yourPassword" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" name="Password" asp-for="Password" class="form-control" id="yourPassword" required>
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('yourPassword')">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="invalid-feedback">Please input a password.</div>
                        </div>
                        <div class="col-12">
                            <label for="yourMatchPassword" class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" name="ConfirmPassword" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" required>
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="invalid-feedback">Please confirm your password.</div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                        </div>
                        <div class="col-12 text-center">
                            <p class="small mb-0">Already have an account? <a href="/Authentication/LoginCashier">Log in</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </section>
    </main>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- jQuery (required for client-side validation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Validation and Unobtrusive Validation for client-side validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom JS -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                alert(errorMessage);
            }

            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                alert(successMessage);
            }

            // Client-side validation for Bootstrap styling
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });

        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleButton = passwordInput.nextElementSibling.querySelector('i');

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleButton.classList.remove("bi-eye");
                toggleButton.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleButton.classList.remove("bi-eye-slash");
                toggleButton.classList.add("bi-eye");
            }
        }
    </script>
</body>
</html>