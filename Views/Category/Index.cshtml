@using SINTIA_DWI_ARGANI.Models.DTO
@model List<CategoryDTO>

@{
    ViewData["Title"] = "Category Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Category Management - Admin Portal</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Simple DataTables CSS -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            padding: 2rem;
        }

        .main {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .pagetitle {
            margin-bottom: 2rem;
        }

            .pagetitle h1 {
                font-weight: 600;
                color: #2d3748;
            }

        .breadcrumb {
            background: none;
            padding: 0;
        }

        .breadcrumb-item a {
            color: #4f46e5;
            text-decoration: none;
        }

            .breadcrumb-item a:hover {
                text-decoration: underline;
            }

        .breadcrumb-item.active {
            color: #718096;
        }

        .card {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            position: relative;
            backdrop-filter: blur(10px);
        }

        .category-icon {
            background: #4f46e5;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .category-icon i {
                color: white;
                font-size: 1.5rem;
            }

        .card-title {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background: #4f46e5;
            border: none;
            border-radius: 10px;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background: #4338ca;
                transform: translateY(-2px);
            }

            .btn-primary i {
                margin-right: 0.5rem;
            }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

            .table thead {
                background: #4f46e5;
                color: white;
            }

                .table thead th {
                    font-weight: 500;
                    padding: 1rem;
                }

            .table tbody tr {
                transition: background 0.3s ease;
            }

                .table tbody tr:hover {
                    background: #f7fafc;
                }

            .table tbody td {
                padding: 1rem;
                color: #4a5568;
                vertical-align: middle;
            }

        .badge.bg-success {
            background: #10b981 !important;
        }

        .badge.bg-secondary {
            background: #6b7280 !important;
        }

        .btn-outline-primary {
            border-color: #4f46e5;
            color: #4f46e5;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: background 0.3s ease, color 0.3s ease, transform 0.2s ease;
        }

            .btn-outline-primary:hover {
                background: #4f46e5;
                color: white;
                transform: translateY(-2px);
            }

            .btn-outline-primary i {
                margin-right: 0.3rem;
            }

        .btn-outline-danger {
            border-color: #e53e3e;
            color: #e53e3e;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: background 0.3s ease, color 0.3s ease, transform 0.2s ease;
        }

            .btn-outline-danger:hover {
                background: #e53e3e;
                color: white;
                transform: translateY(-2px);
            }

            .btn-outline-danger i {
                margin-right: 0.3rem;
            }
    </style>
</head>
<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <div>
                <h1>Category Management</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item">Categories</li>
                        <li class="breadcrumb-item active">List</li>
                    </ol>
                </nav>
            </div>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="category-icon">
                            <i class="bi bi-tags"></i>
                        </div>
                        <div class="card-body pt-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0">Category List</h5>
                                <a href="@Url.Action("Edit", "Category")" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add Category
                                </a>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover datatable w-100">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%;">ID</th>
                                            <th>Category Name</th>
                                            <th>Status</th>
                                            <th style="width: 20%;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var category in Model)
                                        {
                                            <tr>
                                                <td>@category.Id</td>
                                                <td>@category.CategoriName</td>
                                                <td>
                                                    <span class="badge @(category.StatusCategori == 0 ? "bg-success" : "bg-secondary")">
                                                        @(category.StatusCategori == 0 ? "Published" : "Unpublished")
                                                    </span>
                                                </td>
                                                <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })"
                                                       class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("DeleteCategori", "Category", new { id = category.Id })"
                                                       class="btn btn-sm btn-danger"
                                                       onclick="return confirm('Are you sure you want to delete this category?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Simple DataTables JS -->
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>

    <!-- Initialize DataTable -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const datatables = document.querySelectorAll('.datatable');
            datatables.forEach(datatable => {
                new simpleDatatables.DataTable(datatable);
            });
        });
    </script>
</body>
</html>