@using SINTIA_DWI_ARGANI.Models.DTO
@model List<CategoryDTO>

@{
    ViewData["Title"] = "Category List";
}

<style>
    .main {
        padding: 2rem;
    }

    .pagetitle {
        margin-bottom: 2rem;
    }

        .pagetitle h1 {
            font-weight: 600;
            color: #2d3748;
        }

    .breadcrumb {
        background: none;
        padding: 0;
    }

    .breadcrumb-item a {
        color: #4154f1;
        text-decoration: none;
    }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

    .breadcrumb-item.active {
        color: #718096;
    }

    .card {
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        backdrop-filter: blur(10px);
        position: relative;
    }

    .card-icon {
        background: #4154f1;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: -30px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .card-icon i {
            color: white;
            font-size: 1.5rem;
        }

    .card-title {
        font-weight: 600;
        color: #2d3748;
        text-align: center;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background: #4154f1;
        border: none;
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: #3345c1;
            transform: translateY(-2px);
        }

        .btn-primary i {
            margin-right: 0.5rem;
        }

    .table-responsive {
        border-radius: 10px;
        overflow-x: auto;
    }

    .table {
        margin-bottom: 0;
        width: 100%;
    }

        .table thead {
            background: #f7fafc;
        }

        .table th {
            color: #4a5568;
            font-weight: 500;
            padding: 1rem;
            border-bottom: 2px solid #e2e8f0;
            text-align: center;
        }

        .table td {
            padding: 1rem;
            color: #4a5568;
            vertical-align: middle;
            border-bottom: 1px solid #e2e8f0;
            text-align: center;
        }

        .table tbody tr {
            transition: background 0.3s ease;
        }

            .table tbody tr:hover {
                background: #f7fafc;
            }

    .badge.bg-success {
        background: #10b981 !important;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }

    .badge.bg-secondary {
        background: #6b7280 !important;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }

    .btn-group .btn {
        border-radius: 8px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-warning {
        background: #f59e0b;
        border: none;
        color: white;
    }

        .btn-warning:hover {
            background: #d97706;
            transform: translateY(-2px);
        }

    .btn-danger {
        background: #e53e3e;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background: #c53030;
            transform: translateY(-2px);
        }

    .btn i {
        margin-right: 0.3rem;
    }

    .datatable-search {
        padding: 0.5rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        margin-bottom: 1rem;
        width: 100%;
        max-width: 300px;
        transition: all 0.3s ease;
    }

        .datatable-search:focus {
            outline: none;
            border-color: #4154f1;
            box-shadow: 0 0 0 3px rgba(65, 84, 241, 0.2);
        }

    .dataTables_filter input {
        padding: 0.5rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

        .dataTables_filter input:focus {
            outline: none;
            border-color: #4154f1;
            box-shadow: 0 0 0 3px rgba(65, 84, 241, 0.2);
        }

    .dataTables_length select {
        padding: 0.5rem;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }
</style>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Category Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Products</li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Category List</h5>

                        <div class="d-flex justify-content-end mb-3">
                            <a href="@Url.Action("Edit", "Category")" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Category
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover datatable" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>@category.CategoriName</td>
                                            <td>
                                                <span class="badge @(category.StatusCategori == 0 ? "bg-success" : "bg-secondary")">
                                                    @(category.StatusCategori == 0 ? "Published" : "Unpublished")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })"
                                                       class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("DeleteCategori", "Category", new { id = category.Id })"
                                                       class="btn btn-sm btn-danger"
                                                       onclick="return confirm('Are you sure you want to delete this Category?');">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Load jQuery sebelum DataTables -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.datatable').DataTable({
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search categories...",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
}