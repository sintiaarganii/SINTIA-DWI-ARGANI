@using SINTIA_DWI_ARGANI.Models.DTO
@model CategoryDTO

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Category" : "Edit Category";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@(Model.Id == 0 ? "Add Category" : "Edit Category") - Admin Portal</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .main {
            width: 100%;
            max-width: 700px;
        }

        .pagetitle {
            margin-bottom: 2rem;
        }

            .pagetitle h1 {
                font-weight: 600;
                color: #2d3748;
            }

        .breadcrumb {
            background: none;
            padding: 0;
        }

        .breadcrumb-item a {
            color: #4f46e5;
            text-decoration: none;
        }

            .breadcrumb-item a:hover {
                text-decoration: underline;
            }

        .breadcrumb-item.active {
            color: #718096;
        }

        .card {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            position: relative;
            backdrop-filter: blur(10px);
        }

        .category-icon {
            background: #4f46e5;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .category-icon i {
                color: white;
                font-size: 1.5rem;
            }

        .card-title {
            font-weight: 600;
            color: #2d3748;
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            color: #4a5568;
            font-size: 0.95rem;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            padding: 0.75rem;
            background: #f7fafc;
            color: #4a5568;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #4f46e5;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
                outline: none;
            }

        .invalid-feedback {
            font-size: 0.85rem;
            color: #e53e3e;
        }

        .btn-primary {
            background: #4f46e5;
            border: none;
            border-radius: 10px;
            padding: 0.75rem 2rem;
            font-weight: 500;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background: #4338ca;
                transform: translateY(-2px);
            }

            .btn-primary i {
                margin-right: 0.5rem;
            }

        .btn-secondary {
            background: #6b7280;
            border: none;
            border-radius: 10px;
            padding: 0.75rem 2rem;
            font-weight: 500;
            color: white;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-secondary:hover {
                background: #4b5563;
                transform: translateY(-2px);
            }

            .btn-secondary i {
                margin-right: 0.5rem;
            }

        .text-center {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <div>
                <h1>@(Model.Id == 0 ? "Add New Category" : "Edit Category")</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Categories</a></li>
                        <li class="breadcrumb-item active">@(Model.Id == 0 ? "Add" : "Edit")</li>
                    </ol>
                </nav>
            </div>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="category-icon">
                            <i class="bi bi-tags"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Category Information</h5>

                            <form asp-controller="Category" asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />

                                <div class="col-md-12">
                                    <label for="CategoriName" class="form-label">Category Name</label>
                                    <input type="text" class="form-control" id="CategoriName" asp-for="CategoriName" required>
                                    <span asp-validation-for="CategoriName" class="invalid-feedback"></span>
                                </div>

                                <div class="col-md-12">
                                    <label for="StatusCategori" class="form-label">Status</label>
                                    <select asp-for="StatusCategori" class="form-select" required>
                                        <option value="0">Published</option>
                                        <option value="1">Unpublished</option>
                                    </select>
                                    <span asp-validation-for="StatusCategori" class="invalid-feedback"></span>
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Save
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Bootstrap JS -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validation Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $('form.needs-validation').validate({
                rules: {
                    CategoriName: {
                        required: true,
                        minlength: 3,
                        maxlength: 10,
                        pattern: /^[A-Z][a-z]{2,9}$/
                    },
                    StatusCategori: {
                        required: true
                    }
                },
                messages: {
                    CategoriName: {
                        required: "Nama kategori wajib diisi.",
                        minlength: "Nama kategori minimal 3 huruf.",
                        maxlength: "Nama kategori maksmial 10 huruf.",
                        pattern: "Huruf pertama harus kapital, tidak boleh ada angka dan simbol."
                    },
                    StatusCategori: {
                        required: "Status wajib diisi."
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.col-md-12').append(error);
                },
                highlight: function (element) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                }
            });
        });
    </script>
</body>
</html>



