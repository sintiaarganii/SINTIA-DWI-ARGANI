@using SINTIA_DWI_ARGANI.Models.DTO
@model List<CategoryDTO>

@{
    ViewData["Title"] = "Category";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Category List - Admin Portal</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Simple DataTables CSS -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            padding: 2rem;
        }

        .main {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .pagetitle {
            margin-bottom: 2rem;
        }

        .pagetitle h1 {
            font-weight: 600;
            color: #2d3748;
        }

        .breadcrumb {
            background: none;
            padding: 0;
        }

        .breadcrumb-item a {
            color: #4f46e5;
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        .breadcrumb-item.active {
            color: #718096;
        }

        .card {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            position: relative;
            backdrop-filter: blur(10px);
        }

        .category-icon {
            background: #4f46e5;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .category-icon i {
            color: white;
            font-size: 1.5rem;
        }

        .card-title {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 1rem;
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead {
            background: #4f46e5;
            color: white;
        }

        .table thead th {
            font-weight: 500;
            padding: 1rem;
        }

        .table tbody tr {
            transition: background 0.3s ease;
        }

        .table tbody tr:hover {
            background: #f7fafc;
        }

        .table tbody td {
            padding: 1rem;
            color: #4a5568;
            vertical-align: middle;
        }

        .table tbody td.status-published {
            color: #10b981;
            font-weight: 500;
        }

        .table tbody td.status-unpublished {
            color: #6b7280;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <main id="main" class="main">
        <div class="pagetitle">
            <div>
                <h1>Category List</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item">Tables</li>
                        <li class="breadcrumb-item active">Data</li>
                    </ol>
                </nav>
            </div>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="category-icon">
                            <i class="bi bi-tags"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Categories</h5>

                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Category Name</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td>@data.Id</td>
                                            <td>@data.CategoriName</td>
                                            <td class="@(data.StatusCategori == 0 ? "status-published" : "status-unpublished")">
                                                @(data.StatusCategori == 0 ? "Published" : "Unpublished")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Simple DataTables JS -->
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>

    <!-- Initialize DataTable -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new simpleDatatables.DataTable('.datatable');
        });
    </script>
</body>
</html>